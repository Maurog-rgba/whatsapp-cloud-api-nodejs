<!DOCTYPE html>
<html>
  <head>
    <title>Sending Messages</title>
    <h1 class="text-center">Sending Messages with Nodejs</h1>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  </head>
  <body>
    <div class="d-flex flex-row justify-content-center align-items-center">
      <div class="border px-3 rounded">
        <div class="col text-black">
          <div class="d-flex align-items-center h-custom-2">
            <form class="w-100" method="post" action="/message">
              <!-- nome -->
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required />
              </div>
              <!-- telefone -->
              <div class="mb-3">
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" required />
              </div>
              <div class="pt-1 mb-4 d-flex align-items-center justify-content-center">
                <input type="submit" class="btn btn-info btn-lg btn-block" value="Enviar" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </body>
</html>
